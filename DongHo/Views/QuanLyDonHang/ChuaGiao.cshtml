@model IEnumerable<DongHo.Models.DonHang>
@{
    ViewBag.Title = "ChuaGiao";
    Layout = "~/Views/Shared/_LayoutAdmin1.cshtml";
    WebGrid grid = new WebGrid(source: Model, rowsPerPage: 20);
}
<h2>Quản lý đơn hàng (Danh sách đơn hàng chưa giao đă thanh toán)</h2>  <br />
@*Dùng boostrap t?o 1 tab control v?i các liên k?t d?n các view khác*@
<ul class="nav nav-tabs">
    <li role="presentation"><a href="@Url.Action("ChuaThanhToan","QuanLyDonHang")">Chưa thanh toán</a></li>
    <li role="presentation" class="active"><a href="@Url.Action("ChuaGiao", "QuanLyDonHang")">Chưa giao & Đă thanh toán</a></li>
    <li role="presentation"><a href="@Url.Action("DaGiaoDaThanhToan", "QuanLyDonHang")">Đă giao & Đă thanh toán</a></li>
</ul>

<br /><br />

@*Dùng control Webgrid th? hi?n d? li?u model là danh sách các don d?t hàng du?c
    truy v?n theo di?u ki?n t? controller*@
@grid.GetHtml(
    tableStyle: "divTable",
    headerStyle: "gridHead",
    footerStyle: "gridFooter",
    rowStyle: "gridRow",
    alternatingRowStyle: "gridAltRow",
    columns: grid.Columns(
        grid.Column("Madh", header: "Mă đơn hàng"),
        grid.Column("Makh", header: "Họ tên KH", format: p => p.Makh != null ? p.KhachHang.Tenkh : ""), //Dùng toán t? 3 ngôi thay cho di?u ki?n if
        grid.Column("Ngaydat", header: "Ngày đặt"),
        grid.Column("Tinhtrang", header: "Tình trạng giao hàng"),
        grid.Column("Ngaygiao", header: "Ngày giao"),
        grid.Column("Thanhtoan", header: "Đă thanh toán"),
        grid.Column(format: p => @Html.ActionLink("Duyệt đơnn hàng", "DuyetDonHang", new { id = p.Madh }, new { @target = "_blank" }))

        ))

<style>
    .nav > li {
        background: rgba(0,0,0,.5);
    }

    .divTable {
        width: 100%;
        border: 1px solid #999999;
    }

        .divTable td {
            border: 1px solid #999999;
        }

    .gridHead {
        background-color: Green;
    }

        .gridHead > th > a {
            color: #fff;
        }

    .gridFooter {
        font-weight: bold;
    }

    .divTable a {
        color: blue;
    }
