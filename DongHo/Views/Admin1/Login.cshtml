<!DOCTYPE html>
<html>
<head>
    <title>Login</title>
    <meta charset="UTF-8" />
    <meta name="Designer" content="PremiumPixels.com">
    <meta name="Author" content="$hekh@r d-Ziner, CSSJUNTION.com">
    <link href="~/Content/Admin/css/structure.css" rel="stylesheet" />
    <link href="~/Content/Admin/css/reset.css" rel="stylesheet" />
</head>

<body>
    <div class="box login" style="width:305px">

        @using (Html.BeginForm())
        {
            @Html.ValidationSummary(true)
            <h3 style="text-align:center; color:red">@ViewBag.Thongbao</h3>
            <fieldset class="boxBody">
                <label>Username</label>
                <input type="text" tabindex="1" placeholder="Administrator" name="user" required>
                <label><a href="#" class="rLink" tabindex="5">Forget your password?</a>Password</label>
                <input type="password" tabindex="2" required name="password" placeholder="Password">
            </fieldset>
            <footer style="height:80px">
                <label><input type="checkbox" tabindex="3">Keep me logged in</label>
                <input type="submit" class="btnLogin" value="Login" tabindex="4">
            </footer>
        }
    </div>
    <footer id="main">
        <a href="http://wwww.cssjunction.com">Simple Login Form (HTML5/CSS3 Coded) by CSS Junction</a> | <a href="http://www.premiumpixels.com">PSD by Premium Pixels</a>
    </footer>
</body>
</html>
