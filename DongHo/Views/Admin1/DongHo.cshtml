@using DongHo.Models

@using PagedList.Mvc;
@model PagedList.IPagedList<SanPham>

@{
    ViewBag.Title = "SanPham";
    Layout = "~/Views/Shared/_LayoutAdmin1.cshtml";
}

@helper Truncate(string input, int lenght)
{
    if (input.Length < lenght)
    {
        @input
    }
    else
    {
        @input.Substring(0, lenght)<text>...</text>
    }
}



<a href="@Url.Action("ThemMoi", "Admin1")" class="button">Thêm mới</a>

<table class="table">
    <tr>
        <th style="font-weight:bold">
            Tên SP
        </th>
        <th style="font-weight:bold">
            Giá
        </th>
        <th style="font-weight:bold">
            Mô tả
        </th>
        <th style="font-weight:bold">
            Số lượng
        </th>
        <th style="font-weight:bold">
            Ảnh
        </th>
        @*<th style="font-weight:bold">
            Ngày đăng
        </th>*@
        <th style="font-weight:bold">
            Mã loại
        </th>
        <th style="font-weight:bold">
            Mã NSX
        </th>
        <th style="font-weight:bold">
       
        </th>

    </tr>



    @foreach (var item in Model)
    {
        <tr style="border-top:1px solid gray">
            <td style="text-align:justify">
                @item.Tensp
            </td>
            <td>
                @item.Gia

            </td>
            <td width="200">
                @Truncate(item.Mota, 100)
            </td>
            <td>
                @item.Soluong
            </td>
            <td>
                <img src="~/Images/@item.Anh" width="100" height="100">
            </td>
            @*<td>
                @item.Ngaydang
            </td>*@
            <td>
                @item.LoaiSP.Tenloai
            </td>
            <td>
                @item.NhaSX.Tennsx
            </td>
           



            <td>
                @Html.ActionLink("Edit", "Edit", new { id = item.Masp }) |
                @Html.ActionLink("Details", "Details", new { id = item.Masp }) |
                @Html.ActionLink("Delete", "Delete", new { id = item.Masp })
            </td>

        </tr>
    }
</table>

<div class="cont-desc span_1_of_2">
    <div class="MenuTrang" style="display:inline">
        @*Tao lien ket den cac trang*@
        <ul>
            <li style="color:#c41e1e">Trang @(Model.PageCount < Model.PageNumber ? 0 : Model.PageNumber)/@Model.PageCount</li>
            <li>@Html.PagedListPager(Model, page => Url.Action("DongHo", new { page = page, @MaLoaiSP = ViewBag.MaLoaiSP }))</li>
        </ul>
    </div>
</div>

<style>
    .MenuTrang ul li {
        display: inline;
        text-decoration: none;
    }
</style>
