@model IEnumerable<DongHo.Models.SanPham>

</div>
<div class="section group">
    <div>
        <div class="content_top">
            <div class="heading">
                <h3>Đồng hồ kim</h3>
            </div>
            <div class="see">
                <p><a href="@Url.Action("Sanpham","DongHo")">Xem Thêm</a></p>
            </div>
            <div class="clear"></div>
        </div>
        @foreach (var dongho in Model)
        {
            <div class="grid_1_of_4 images_1_of_4">
                <a href="@Url.Action("Details", "DongHo", new {id= dongho.Masp })"><img src="~/images/@dongho.Anh" alt="@dongho.Tensp" /></a>
                <h2>@dongho.Tensp</h2>
                <div class="price-details">
                    <div class="price-number">
                        <p><span class="rupees">@String.Format("{0:0,0 đ}", @dongho.Gia)</span></p>
                    </div>
                    <div class="add-cart">
                        <h4><a href="@Url.Action("Themgiohang", "GioHang", new { @iMasp = dongho.Masp, @strURL = Request.Url.ToString()})">Add to Cart</a></h4>
                    </div>
                    <div class="clear"></div>
                </div>

            </div>
        }

    </div>
</div>
