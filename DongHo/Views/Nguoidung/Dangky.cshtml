<style>
    .dangky {
        font-family: 'ambleregular';
        font-size: 17px;
        color: #d31313;
    }
</style>
@{
    ViewBag.Title = "Dangky";
    Layout = "~/Views/Shared/_LayoutUser.cshtml";
}
<div class="content_top">
    <div >
        <h3 style="text-align:center;color:#d31313;">Đăng Ký</h3>
    </div>
    
    <div class="clear"></div>
</div>
<div class="content" style="text-align: -webkit-center">
    <table align="center">
        @ViewBag.ThongBao
        @using (Html.BeginForm())
        {
            @Html.ValidationSummary(true)
            <tr style="height:40px">
                <td class="dangky" style="width:150px;">Họ tên khách hàng:  </td>
                <td style="width:190px;">
                    @Html.TextBox("HotenKH")
                    @ViewData["Loi1"]
                </td>
            </tr>
            <tr style="height:40px">
                <td class="dangky">Tên đăng nhập:</td>
                <td>
                    @Html.TextBox("TenDN")
                    @ViewData["Loi2"]
                </td>
            </tr>
            <tr style="height:40px">
                <td class="dangky">Địa Chỉ</td>
                <td>
                    @Html.TextBox("DiaChi")
                    @ViewData["Loi6"]
                </td>
            </tr>
            <tr style="height:40px">
                <td class="dangky">Email:</td>
                <td>
                   <input type="email" name="email" required />
                    @ViewData["Loi5"]
                </td>
            </tr>
            <tr style="height:40px">
                <td class="dangky">Mật khẩu:</td>
                <td>
                    @Html.Password("Matkhau")
                    @ViewData["Loi3"]
                </td>
            </tr>
            <tr style="height:40px">
                <td class="dangky">Nhập lại mật khẩu:</td>
                <td>
                    @Html.Password("Matkhaunhaplai")
                    @ViewData["Loi4"]
                </td>
            </tr>
            <tr style="height:40px">
                <td class="dangky">Điện thoại:</td>
                <td>
                    <input type="number" name="Dienthoai" required />
                           @ViewData["Loi6"]
                </td>
            </tr>
            <tr style="height:40px">
                <td class="dangky">Ngày sinh:</td>
                <td>
                    <input type="date" name="Ngaysinh" size="100px">
                </td>
            </tr>
            <tr style="height:40px">
                <td></td>
                <td>
                    <input type="submit" value="Đăng Ký" class="button">
                </td>
            </tr>
        }
    </table>
</div>
