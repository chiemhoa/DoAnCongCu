
@{
    ViewBag.Title = "Dangnhap";
    Layout = "~/Views/Shared/_LayoutUser.cshtml";
}

<div class="content_top">
    <div>
        <h3 style="text-align:center;color:#d31313;">Đăng Nhập</h3>
    </div>

    <div class="clear"></div>
</div>
<div class="content" style="text-align: -webkit-center">
    <h4 style="color:#ff0000;text-align:center">@ViewBag.Thongbao</h4>

    <table align="center">

        @using (Html.BeginForm())
        {
            @Html.ValidationSummary(true)
            
            <tr style="height:40px">
                <td class="dangky">Tên đăng nhập:</td>
                <td>
                    @Html.TextBox("TenDN")
                    @ViewData["Loi1"]
                </td>
            </tr>
            
            <tr style="height:40px">
                <td class="dangky">Mật khẩu:</td>
                <td>
                    @Html.Password("Matkhau")
                    @ViewData["Loi2"]
                </td>
            </tr>
            
            
            
            <tr style="height:40px">
                <td></td>
                <td>
                    <input type="submit" value="Login" class="button">
                </td>
            </tr>
        }
    </table>
</div>

