@model IEnumerable<Models.Framework.THELOAI>

@{
    ViewBag.Title = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin2.cshtml";
}

@section header{
    <div class="row">
        <div class="col-lg-8">
            Quản lý thể loại truyện
        </div>
        <div class="coi-md-4">
            <input type="button" id="quaylai" value="<< Về lại danh sách truyện" class="btn btn-outline btn-info" onclick="window.open('/Admin/Truyen/Index', '_self')">
            <input type="button" id="themmoi" value="Thêm mới một thể loại >>" class="btn btn-outline btn-info" onclick="window.open('/Admin/Theloai/Create', '_self')">
        </div>
    </div>


}
<!DOCTYPE html>
<div class="col-lg-6">
    <div class="panel panel-default">
        <div class="panel-heading">
            Thể loại
        </div>
        <!-- /.panel-heading -->
        <div class="panel-body">
            <div class="table-responsive">
                <table class="table table-striped table-bordered table-hover">
                    <thead>
                        <tr>                            
                            <th>Mã thể loại</th>
                            <th>Tên thể loại</th>  
                            <th>#</th>                           
                        </tr>
                    </thead>
                    <tbody>
                            @foreach (var item in Model)
                            {
                                <tr id="row_@item.Matheloai" class="old gradex">
                                    <td>@item.Matheloai</td>
                                    <td>@item.Tentheloai</td>
                                    <td class="text-center">
                                        <div>
                                            <a href="/Admin/Theloai/Edit/@item.Matheloai">Sửa</a>
                                            |
                                            @Ajax.ActionLink("Xóa", "Delete", new { @id = @item.Matheloai }, new AjaxOptions
                                   {
                                       Confirm = "Bạn có muốn xóa bản ghi này?",
                                       OnComplete = "$('#row_" + @item.Matheloai + "').remove()",
                                       HttpMethod = "Delete"
                                   })
                                        </div>
                                        <div></div>

                                    </td>
                                </tr>
                            }
                        
                       
                    </tbody>
                </table>
            </div>
            <!-- /.table-responsive -->
        </div>
        <!-- /.panel-body -->
    </div>
    <!-- /.panel -->
</div>
<!-- /.col-lg-6 -->