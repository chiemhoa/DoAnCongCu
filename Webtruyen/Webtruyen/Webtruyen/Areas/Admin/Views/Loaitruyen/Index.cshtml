@model IEnumerable<Models.Framework.LOAITRUYEN>

@{
    ViewBag.Title = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin2.cshtml";
}

@section header{
    <div class="row">
        <div class="col-lg-8">
            Quản lý thể loại truyện
        </div>
        <div class="coi-md-4">
            <input type="button" id="quaylai" value="<< Về lại danh sách truyện" class="btn btn-outline btn-info" onclick="window.open('/Admin/Truyen/Index', '_self')">
            <input type="button" id="themmoi" value="Thêm mới loại truyện >>" class="btn btn-outline btn-info" onclick="window.open('/Admin/Loaitruyen/Create', '_self')">
        </div>
    </div>


}
<!DOCTYPE html>
<div class="col-lg-6">
    <div class="panel panel-default">
        <div class="panel-heading">
            Loại truyện
        </div>
        <!-- /.panel-heading -->
        <div class="panel-body">
            <div class="table-responsive">
                <table class="table table-striped table-bordered table-hover">
                    <thead>
                        <tr>
                            <th>Mã loại truyện</th>
                            <th>Tên loại truyện</th>
                            <th>#</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr id="row_@item.Maloai" class="old gradex">
                                <td>@item.Maloai</td>
                                <td>@item.Tenloai</td>
                                <td class="text-center">
                                    <div>
                                        <a href="/Admin/Loaitruyen/Edit/@item.Maloai">Sửa</a>
                                        |
                                        @Ajax.ActionLink("Xóa", "Delete", new { @id = @item.Maloai }, new AjaxOptions
                                   {
                                       Confirm = "Bạn có muốn xóa bản ghi này?",
                                       OnComplete = "$('#row_" + @item.Maloai + "').remove()",

                                       HttpMethod = "Delete"
                                   })

                                    </div>
                                    <div></div>

                                </td>
                            </tr>
                            
                        }
                        

                    </tbody>
                </table>
            </div>
            <!-- /.table-responsive -->
        </div>
        <!-- /.panel-body -->
    </div>
    <!-- /.panel -->
</div>
<!-- /.col-lg-6 -->