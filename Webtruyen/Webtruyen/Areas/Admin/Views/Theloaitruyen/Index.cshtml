
@{
    ViewBag.Title = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin2.cshtml";
    var ttl = (List<Models.ViewModel.TheloaitruyenViewModel>)ViewBag.theloaitruyen;
    int mt = (int)ViewBag.mattruyen;
}

@section header{
    <div class="row">
        <div class="col-lg-8">
           Thể loại truyện
        </div>
        <div class="coi-md-4">
            <input type="button" id="quaylai" value="<< Về lại danh sách truyện" class="btn btn-outline btn-info" onclick="window.open('/Admin/Truyen/Index', '_self')">
            <input type="button" id="themmoi" value="Đến xem chi tiết truyện >>"  class="btn btn-outline btn-info"  onclick = "window.open('/Admin/Truyen/Details/@mt', '_self')">
        </div>
    </div>


}

<div class="row">
    <div class="col-lg-12">
        <div class="panel panel-default">

            <!-- /.panel-heading -->
            <div class="panel-body">
                <table width="100%" class="table table-striped table-bordered table-hover" id="dataTables-example">
                    <thead>
                        <tr>
                           
                            <th class="text-center">Mã</th>
                            <th class="text-center">Tên thể loai</th>
                            
                            <th class="text-center">#</th>

                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in ttl)
                        {
                            <tr id="row_@item.Matruyentl" class="odd gradeX">
                                <td class="text-center">@item.Matruyentl</td>
                                <td class="text-center">@item.Tentheloai</td>
                                
                                <td class="text-center">
                                    <div>
                                        <a href="/Admin/Theloaitruyen/Edit/@item.Matruyentl">Sửa</a>
                                        |
                                        @Ajax.ActionLink("Xóa", "Delete", new { @id = @item.Matruyentl }, new AjaxOptions
                                   {
                                       Confirm = "Bạn có muốn xóa bản ghi này?",
                                       OnComplete = "$('#row_" + @item.Matruyentl + "').remove()",
                                       HttpMethod = "Delete"
                                   })
                                    </div>
                                    <div></div>

                                </td>

                            </tr>
                        }



                    </tbody>
                </table>
                <!-- /.table-responsive -->
                <input type="button" id="themmoi" value="Thêm một thể loại" class="btn btn-outline btn-success" onclick="window.open('/Admin/Theloaitruyen/Create/@mt', '_self')">

            </div>
            <!-- /.panel-body -->
        </div>
        <!-- /.panel -->
    </div>
    <!-- /.col-lg-12 -->
</div>
<!-- /.row -->


