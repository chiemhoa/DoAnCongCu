@model IEnumerable<Models.Framework.CHUONG>

@{
    ViewBag.Title = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
   
}
@section header{
    Danh mục  chương
        

}

@*<!DOCTYPE html>*@
<div class="col-lg-12">
    <div class="panel panel-default">
        <div class="panel-heading">
            Thể loại
        </div>
        <!-- /.panel-heading -->
        <div class="panel-body">
            <div class="table-responsive">
                <table class="table table-striped table-bordered table-hover">
                    <thead>
                        <tr>
                            <th class="text-center col-md-0">Mã chương</th>
                            <th class="text-center col-md-3">Tên chương</th>
                            <th class="text-center">Nội dung</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td class="text-center">@item.Machuong</td>
                                <td>@item.Tenchuong</td>
                                <td>
                                @Truncate(item.Noidong,300)
                                </td>
                            </tr>
                        }


                    </tbody>
                </table>
            </div>
            <!-- /.table-responsive -->
        </div>
        <!-- /.panel-body -->
    </div>
    <!-- /.panel -->
</div>
<!-- /.col-lg-6 -->
@helper Truncate(string input, int length)
{
if (input == null)
{
}
else
{
    if (input.Length < length)
    {
            @input
    }
    else
    {
            @input.Substring(0, length)<text>...</text>
    }
}
}