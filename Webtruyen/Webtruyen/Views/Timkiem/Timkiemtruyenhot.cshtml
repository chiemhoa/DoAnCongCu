<div class="container">
    <div class="products-page">

        <div class="new-product">

            <!---------------------------->
            <div>
                <h3 class="first">Truyện xem nhiều</h3>
                <div class="">
                    <table class="table table-hover">
                        <tbody>

                            @foreach (var item in Model)
                            {
                                <tr>
                                    <td id="cotanhtk" width="210">
                                        <div id="anhtk" class="reponsive">
                                            <a href="/Doctruyen/Chitiettruyen/@item.Matruyen"><img id="anhbiatk" style="cursor:auto" src="@item.Anhbia" width="200" /></a>
                                        </div>
                                    </td>
                                    <td>
                                        <p id="tentruyenCM">
                                            <a class="" href="/Doctruyen/Chitiettruyen/@item.Matruyen"><span id="p" style="font-family:Calibri;font-size:120%; color:sienna;"><strong>@item.Tentruyen</strong></span></a>
                                        </p>
                                        <p>
                                            ✎&nbsp;&nbsp;@item.Tacgia<br />
                                            ❄&nbsp;&nbsp;@item.Sochuong &nbsp;chương<br />
                                            ☼&nbsp;&nbsp;Lượt xem: @item.Solandoc
                                        </p>
                                    </td>
                                    @* <td>Otto</td>*@

                                </tr>

                            }


                        </tbody>
                    </table>
                    @Html.PagedListPager(Model, page => Url.Action("Timkiemtruyenhot", new { page }))

                    <div class="clearfix"></div>
                </div>
            </div>




            <!------------------------>

            <script src="/Assets/Client/js/cbpViewModeSwitch.js" type="text/javascript"></script>
            <script src="/Assets/Client/js/classie.js" type="text/javascript"></script>
        </div>
        <div class="products">

            <div class="product-listy">
                <h2>Thể loại</h2>
                <ul class="product-list">
                    <!--<li><a href="">New Products</a></li>-->
                    @Html.Action("_TheloaiPartial", "HomeClient")

                </ul>
            </div>

            <div class="tags">
                <h4 class="tag_head">Truyện hot</h4>
                <ul class="tags_links"></ul>
                <div class="bs-example">
                    <table class="table">
                        <tbody>
                            @Html.Action("TruyenhotPartial", "HomeClient")
                            @*<tr>

                            <td class="type-info">Semibold 36px</td>
                        </tr>
                        <tr>

                            <td class="type-info">Semibold 30px</td>
                        </tr>
                        <tr>

                            <td class="type-info">Semibold 24px</td>
                        </tr>
                        <tr>

                            <td class="type-info">Semibold 18px</td>
                        </tr>
                        <tr>

                            <td class="type-info">Semibold 14px</td>
                        </tr>
                        <tr>

                            <td class="type-info">Semibold 12px</td>
                        </tr>*@

                        </tbody>
                    </table>
                </div>

            </div>

            <div class="latest-bis">
                <br /><br /><br />
                <div class="offer">
                    <p>TOP</p>
                    <small>10 truyện</small>
                </div>
            </div>



        </div>
        <div class="clearfix"></div>
    </div>
    <div class="clearfix"></div>
</div>
