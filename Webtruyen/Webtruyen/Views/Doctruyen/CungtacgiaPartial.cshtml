@model IEnumerable<Models.Framework.TRUYEN>



 
    @foreach (var item in Model)
    {
        <tr>
            <td class="type-info">
                <p><a href="@Url.Action("Chitiettruyen", "Doctruyen", new { id = @item.Matruyen })"><span id="p" style="font-family:Calibri; color:sienna;font-size:15px;"><strong>&nbsp;@item.Tentruyen</strong></span></a></p>
                <p>
                    ✎&nbsp;&nbsp;@item.Tacgia<br />
                </p>
            </td>

        </tr>

    }
@helper Truncate(string input, int length)
{
if (input == null)
{
}
else
{
    if (input.Length < length)
    {
            @input
    }
    else
    {
            @input.Substring(0, length)<text>...</text>
    }
}
}

  

